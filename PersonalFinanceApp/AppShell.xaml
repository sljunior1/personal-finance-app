<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalFinanceApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonalFinanceApp"
    Shell.FlyoutBehavior="Disabled" Shell.TabBarBackgroundColor="White" Shell.NavBarIsVisible="False" 
    Shell.TabBarDisabledColor="#FF4B4A4A" Shell.TabBarForegroundColor="Black"
    Shell.TabBarTitleColor="Black" Shell.TabBarUnselectedColor="#FF4B4A4A" Shell.PresentationMode="Animated">

<TabBar>
    <ShellContent Title="Principal" ContentTemplate="{DataTemplate local:MainPage}" Icon="ic_home.png" />
    <ShellContent Title="Receita" ContentTemplate="{DataTemplate local:ReceitaPage}" Icon="ic_ganhos.png" />
    <ShellContent Title="Despesa" ContentTemplate="{DataTemplate local:DespesaPage}" Icon="ic_gastos.png" />
    <ShellContent Title="Planejamento" ContentTemplate="{DataTemplate local:PlanejamentoPage}" Icon="ic_planejamento.png" />
    <ShellContent Title="Meta" ContentTemplate="{DataTemplate local:MetaPage}" Icon="ic_meta.png" />
</TabBar>

</Shell>
