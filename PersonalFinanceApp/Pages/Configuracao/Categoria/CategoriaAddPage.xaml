<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:controls="clr-namespace:PersonalFinanceApp.Controls"
             x:Class="PersonalFinanceApp.CategoriaAddPage" BackgroundColor="#FF2E2929">
<ContentPage.Behaviors>
    <toolkit:StatusBarBehavior StatusBarColor="#FF2E2929"/>
</ContentPage.Behaviors>
    <Grid Margin="0">
      <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>   

        <controls:TituloCustom Grid.Row="0" Titulo="NOVA CATEGORIA" IsVisibleConfiguracao="False" IsVisibleAjuda="False" 
                               IsVisibleAdicionar="False" />  

        <VerticalStackLayout Grid.Row="1" BackgroundColor="White" Padding="20" Spacing="15">
            <Entry x:Name="txtDescricao"
                    Placeholder="Digite a descrição"
                    FontSize="Medium" Margin="0,10,0,0"
                    ClearButtonVisibility="WhileEditing" />

            <Button Text="Salvar"
                    BackgroundColor="#28a745"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
</Grid>
</ContentPage>