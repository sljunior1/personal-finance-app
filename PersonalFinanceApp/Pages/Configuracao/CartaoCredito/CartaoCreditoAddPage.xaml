<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:controls="clr-namespace:PersonalFinanceApp.Controls"
             x:Class="PersonalFinanceApp.CartaoCreditoAddPage" BackgroundColor="#FF2E2929">
<ContentPage.Behaviors>
    <toolkit:StatusBarBehavior StatusBarColor="#FF2E2929"/>
</ContentPage.Behaviors>
    <Grid Margin="0">
      <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>   

        <controls:TituloCustom Grid.Row="0" Titulo="NOVO CARTÃO DE CRÉDITO" IsVisibleConfiguracao="False" IsVisibleAjuda="False" 
                               IsVisibleAdicionar="False" />  

        <VerticalStackLayout Grid.Row="1" BackgroundColor="White" Padding="20" Spacing="15">
            <Entry x:Name="txtNumeroCartao"
               Placeholder="Número do cartão"
               Keyboard="Numeric"
               MaxLength="19"
               FontSize="Medium"
               TextChanged="txtNumeroCartao_TextChanged"
               ClearButtonVisibility="WhileEditing" />

        <Entry x:Name="txtNomeTitular"
               Placeholder="Nome do titular"
               FontSize="Medium"
               ClearButtonVisibility="WhileEditing" />

        <Grid ColumnDefinitions="*,*">
            <Entry x:Name="txtValidade"
                   Placeholder="MM/AA"
                   Keyboard="Numeric"
                   MaxLength="5"
                   FontSize="Medium"
                   TextChanged="txtValidade_TextChanged"
                   ClearButtonVisibility="WhileEditing"
                   Grid.Column="0" />
            <Entry x:Name="txtCodigoSeguranca"
                   Placeholder="CVV"
                   Keyboard="Numeric"
                   MaxLength="3"
                   FontSize="Medium"
                   ClearButtonVisibility="WhileEditing"
                   Grid.Column="1" />
        </Grid>
        <Entry x:Name="txtLimiteCartao"
               Placeholder="Limite do cartão de crédito"
               FontSize="Medium"
               Keyboard="Numeric"
               TextChanged="txtLimiteCartao_TextChanged"
               ClearButtonVisibility="WhileEditing" />

        <Picker x:Name="CardBrandPicker"
                Title="Selecione a bandeira"
                FontSize="Medium">
            <Picker.Items>
                <x:String>Visa</x:String>
                <x:String>Mastercard</x:String>
                <x:String>American Express</x:String>
                <x:String>Elo</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Salvar"
                BackgroundColor="#28a745"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
</Grid>
</ContentPage>